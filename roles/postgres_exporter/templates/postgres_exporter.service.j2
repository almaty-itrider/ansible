[Unit]
Description=PostgreSQL exporter for Prometheus
After=network.target

[Service]
User={{ postgres_exporter_user }}
Group={{ postgres_exporter_user }}
Type=simple
Restart=on-failure
EnvironmentFile={{ postgres_exporter_config_dir }}/postgres_exporter.env
ExecStart={{ postgres_exporter_install_dir }}/postgres_exporter --config.file={{ postgres_exporter_config_dir }}/postgres_exporter.yml

[Install]
WantedBy=multi-user.target
